= table_for @foos, header_visible: true, body_visible: true, footer_visible: true, downloadable: :xlsx do
  - column :id
  -# I wasn't able to test the sortables  - column :name, :sortable => true
  - column :name, presence: true, html: {:class => "custom th class"}
  - column :boolean_field
  - column :text_field do |foo|
    - if foo.text_field == "4"
      %strong This is a special Foo!
    - else
      = foo.text_field
  - column :string_field, title: "Here we go"
  - column :created_at
  - column :actions, actions: [:show, :edit, :delete]
